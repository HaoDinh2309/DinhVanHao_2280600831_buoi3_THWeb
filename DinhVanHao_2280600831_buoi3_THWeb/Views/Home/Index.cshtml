@model IEnumerable<DinhVanHao_2280600831_buoi3_THWeb.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

<!-- Hero Banner Section -->
<section class="hero-banner position-relative overflow-hidden mb-5">
    <div class="bg-image" style="background: url('https://img.freepik.com/premium-photo/natural-herbal-creams-bottles-jars-with-green-leaves-light-beige-background-with-copy-space-concept-natural-organic-cosmetic-product-flat-position-top-view_121837-9542.jpg') no-repeat center center/cover; height: 300px;"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto text-center text-white position-relative" style="margin-top: -220px;">
                <div class="p-5 bg-white shadow rounded-4 text-dark">
                    <h1 class="display-5 fw-bold mb-3">Hasaki</h1>
                    <p class="lead text-muted mb-4">Khám phá vẻ đẹp, yêu thương từng khoảnh khắc</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#featured-products" class="btn btn-primary btn-lg px-4 rounded-pill">
                            <i class="fas fa-fire me-2"></i>Shop Now
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-lg px-4 rounded-pill">
                            <i class="fas fa-info-circle me-2"></i>Learn More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section id="featured-products" class="py-5 bg-light">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-6 col-md-8 mx-auto text-center">
                <span class="badge bg-primary rounded-pill px-3 py-2 mb-2">TOP SELECTION</span>
                <h2 class="display-6 fw-bold">Featured Products</h2>
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <div class="border-top border-2 border-primary me-3" style="width: 50px;"></div>
                    <i class="fas fa-gem text-primary"></i>
                    <div class="border-top border-2 border-primary ms-3" style="width: 50px;"></div>
                </div>
                <p class="text-muted">Curated selection of our best-selling and highest-rated products</p>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col product-wrapper">
                    <div class="card product-card h-100 border-0 rounded-4 shadow-sm overflow-hidden">
                        <!-- Product image container with overlay -->
                        <div class="position-relative product-img-container">
                            <div class="product-labels position-absolute start-0 top-0 m-3 d-flex flex-column gap-2">
                                <span class="badge bg-danger px-3 py-2 rounded-pill">HOT</span>
                                <span class="badge bg-success px-3 py-2 rounded-pill">SALE</span>
                            </div>
                            <div class="position-absolute end-0 top-0 m-3">
                                <button class="btn btn-light rounded-circle shadow-sm p-2 wishlist-btn">
                                    <i class="fas fa-heart text-danger"></i>
                                </button>
                            </div>
                            <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 280px; object-fit: cover;">
                            
                        </div>

                        <!-- Product details -->
                        <div class="card-body text-center py-4 px-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill">Best Seller</span>
                                <div class="d-flex text-warning">
                                    <i class="fas fa-star"></i>
                                    <span class="ms-1 small">4.8</span>
                                </div>
                            </div>

                            <h5 class="card-title fw-bold text-dark">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="text-muted small mb-1">Premium Collection</p>
                            <div class="d-flex justify-content-center align-items-center gap-2 mb-3">
                                <span class="h5 fw-bold text-primary mb-0">@item.Price.ToString("#,##0") VND</span>
                                <span class="text-decoration-line-through text-muted small">@((item.Price * 1.2m).ToString("#,##0")) VND</span>
                            </div>
                        </div>

                        <!-- Product footer -->
                        <div class="card-footer bg-white border-0 pt-0 pb-4 px-4">
                            <a asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity"
                               class="btn btn-primary btn-lg w-100 rounded-pill shadow-sm">
                                <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                            </a>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge bg-success bg-opacity-10 text-success small">
                                    <i class="fas fa-check-circle me-1"></i> In Stock
                                </span>
                                <span class="badge bg-dark bg-opacity-10 text-dark small">
                                    <i class="fas fa-truck me-1"></i> Free Shipping
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- View All Button -->
        <div class="text-center mt-5">
            <a href="#" class="btn btn-outline-primary btn-lg px-5 rounded-pill">
                <i class="fas fa-th-large me-2"></i> View All Products
            </a>
        </div>
    </div>
</section>


<style>
    body {
        background-color: #fffdf5; /* Màu vàng nhạt */
    }
    /* Product Card Styles */
    .product-wrapper {
        transform: translateY(0);
        transition: all 0.3s ease;
    }

        .product-wrapper:hover {
            transform: translateY(-10px);
        }

    .product-card {
        transition: all 0.3s ease;
    }

    .product-img-container {
        overflow: hidden;
    }

        .product-img-container img {
            transition: transform 0.5s ease;
        }

    .product-wrapper:hover .product-img-container img {
        transform: scale(1.08);
    }

    .product-overlay {
        height: 0;
        background: linear-gradient(0deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .product-wrapper:hover .product-overlay {
        height: 80px;
        opacity: 1;
    }

    .wishlist-btn {
        transition: all 0.3s ease;
    }

        .wishlist-btn:hover {
            transform: scale(1.1);
        }

    /* Button Hover Effects */
    .btn {
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 15px rgba(13, 110, 253, 0.2) !important;
    }

    .btn-outline-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 15px rgba(13, 110, 253, 0.1) !important;
    }

    /* General Styles */
    .rounded-4 {
        border-radius: 1rem !important;
    }

    .rounded-5 {
        border-radius: 2rem !important;
    }

    /* Animation for badges */
    .badge {
        transition: all 0.3s ease;
    }

        .badge:hover {
            transform: scale(1.05);
        }
</style>