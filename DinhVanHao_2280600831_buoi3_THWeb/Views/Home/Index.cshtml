@model IEnumerable<DinhVanHao_2280600831_buoi3_THWeb.Models.Product>
@{
    ViewData["Title"] = "Home Page";
    int numOfQuantity = 1;
}

<!-- Hero Banner Section -->
<section class="hero-banner position-relative overflow-hidden mb-5">
    <div class="bg-image" style="background: url('https://img.freepik.com/premium-photo/natural-herbal-creams-bottles-jars-with-green-leaves-light-beige-background-with-copy-space-concept-natural-organic-cosmetic-product-flat-position-top-view_121837-9542.jpg') no-repeat center center/cover; height: 300px;"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto text-center text-white position-relative" style="margin-top: -220px;">
                <div class="p-5 bg-white shadow rounded-4 text-dark">
                    <h1 class="display-5 fw-bold mb-3" style="color: #595959;">SammiShop</h1>
                    <p class="lead mb-4" style="color: #b08968;">Khám phá vẻ đẹp, yêu thương từng khoảnh khắc</p>
                    <div class="d-flex justify-content-center gap-3">
                        <a href="#featured-products" class="btn btn-lg px-4 rounded-pill" style="background-color: #f4a261; color: white; border: none;">
                            <i class="fas fa-fire me-2"></i>Shop Now
                        </a>
                        <a href="#" class="btn btn-outline-secondary btn-lg px-4 rounded-pill" style="color: #595959; border-color: #595959;">
                            <i class="fas fa-info-circle me-2"></i>Learn More
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section id="featured-products" class="py-5" style="background-color: #FCEFE6 ;">
    <div class="container">
        <div class="row mb-5">
            <div class="col-lg-6 col-md-8 mx-auto text-center">
                <span class="badge rounded-pill px-3 py-2 mb-2" style="background-color: #f4c542; color: #595959;">TOP SELECTION</span>
                <h2 class="display-6 fw-bold" style="color: #595959;">Sản phẩm nổi bật</h2>
                <div class="d-flex align-items-center justify-content-center mb-3">
                    <div class="border-top border-2 me-3" style="width: 50px; border-color: #b08968;"></div>
                    <i class="fas fa-gem" style="color: #b08968;"></i>
                    <div class="border-top border-2 ms-3" style="width: 50px; border-color: #b08968;"></div>
                </div>
                <p style="color: #595959;">Curated selection of our best-selling and highest-rated products</p>
            </div>
        </div>

        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col product-wrapper">
                    <div class="card product-card h-100 border-0 rounded-4 shadow-sm overflow-hidden">
                        <!-- Product image container with overlay -->
                        <div class="position-relative product-img-container">
                            <div class="product-labels position-absolute start-0 top-0 m-3 d-flex flex-column gap-2">
                                <span class="badge px-3 py-2 rounded-pill" style="background-color: #f4a261; color: white;">HOT</span>
                                <span class="badge px-3 py-2 rounded-pill" style="background-color: #b5c99a; color: #595959;">SALE</span>
                            </div>
                            <div class="position-absolute end-0 top-0 m-3">
                                <button class="btn btn-light rounded-circle shadow-sm p-2 wishlist-btn">
                                    <i class="fas fa-heart" style="color: #f4a261;"></i>
                                </button>
                            </div>

                            <!-- Wrap image with a link to the product detail page -->
                            <a href="@Url.Action("Display1", "Product", new { id = item.Id })">
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 280px; object-fit: cover;">
                            </a>

                        </div>

                        <!-- Product details -->
                        <div class="card-body text-center py-4 px-4">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <span class="badge px-3 py-2 rounded-pill" style="background-color: rgba(244, 197, 66, 0.1); color: #b08968;">Best Seller</span>
                                <div class="d-flex" style="color: #f4c542;">
                                    <i class="fas fa-star"></i>
                                    <span class="ms-1 small">4.8</span>
                                </div>
                            </div>

                            <h5 class="card-title fw-bold" style="color: #595959;">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="small mb-1" style="color: #b08968;">Premium Collection</p>
                            <div class="d-flex justify-content-center align-items-center gap-2 mb-3">
                                <span class="h5 fw-bold mb-0" style="color: #f4a261;">@item.Price.ToString("#,##0") VND</span>
                                <span class="text-decoration-line-through small" style="color: #595959;">@((item.Price * 1.2m).ToString("#,##0")) VND</span>
                            </div>
                        </div>

                        <!-- Product footer -->
                        <div class="card-footer bg-white border-0 pt-0 pb-4 px-4">
                            <a href="javascript:void(0);"
                               class="btn btn-lg w-100 rounded-pill shadow-sm"
                               style="background-color: #f4a261; color: white; border: none;"
                               onclick="addToCart(@item.Id, @numOfQuantity)">
                                <i class="fas fa-shopping-cart me-2"></i> Add to Cart
                            </a>

                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <span class="badge small" style="background-color: rgba(181, 201, 154, 0.1); color: #b5c99a;">
                                    <i class="fas fa-check-circle me-1"></i> In Stock
                                </span>
                                <span class="badge small" style="background-color: rgba(89, 89, 89, 0.1); color: #595959;">
                                    <i class="fas fa-truck me-1"></i> Free Shipping
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- View All Button -->
        <div class="text-center mt-5">
            <a href="#" class="btn btn-lg px-5 rounded-pill" style="background-color: transparent; color: #595959; border: 1px solid #b08968;">
                <i class="fas fa-th-large me-2"></i> View All Products
            </a>
        </div>
    </div>
</section>



<!-- JavaScript for Add to Cart AJAX -->
<script>
    function addToCart(productId, quantity) {
        $.ajax({
            url: '@Url.Action("AddToCart", "ShoppingCart")', // Gọi action AddToCart trong ShoppingCart controller
            type: 'POST',
            data: {
                productId: productId,
                quantity: quantity
            },
            success: function(response) {
                if (response.success) {
                    alert("Sản phẩm đã được thêm vào giỏ hàng!"); // Hiển thị thông báo thành công

                    // Cập nhật số lượng giỏ hàng trên giao diện
                    $('#cart-count').text(response.totalQuantity); // Cập nhật số lượng giỏ hàng
                } else {
                    alert(response.message); // Hiển thị thông báo lỗi nếu có
                }
            },
            error: function() {
                alert("Bạn cần đăng nhập để truy cập chức năng này!");
            }
        });
    }
</script>

<style>
    body {
        background-color: #fffdf5; /* Màu vàng nhạt giữ nguyên */
    }
    /* Product Card Styles */
    .product-wrapper {
        transform: translateY(0);
        transition: all 0.3s ease;
    }

        .product-wrapper:hover {
            transform: translateY(-10px);
        }

    .product-card {
        transition: all 0.3s ease;
    }

    .product-img-container {
        overflow: hidden;
    }

        .product-img-container img {
            transition: transform 0.5s ease;
        }

    .product-wrapper:hover .product-img-container img {
        transform: scale(1.08);
    }

    .product-overlay {
        height: 0;
        background: linear-gradient(0deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 100%);
        opacity: 0;
        transition: all 0.3s ease;
    }

    .product-wrapper:hover .product-overlay {
        height: 80px;
        opacity: 1;
    }

    .wishlist-btn {
        transition: all 0.3s ease;
    }

        .wishlist-btn:hover {
            transform: scale(1.1);
        }

    /* Button Hover Effects */
    .btn {
        transition: all 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(176, 137, 104, 0.2) !important;
        }

    /* General Styles */
    .rounded-4 {
        border-radius: 1rem !important;
    }

    .rounded-5 {
        border-radius: 2rem !important;
    }

    /* Animation for badges */
    .badge {
        transition: all 0.3s ease;
    }

        .badge:hover {
            transform: scale(1.05);
        }
</style>
