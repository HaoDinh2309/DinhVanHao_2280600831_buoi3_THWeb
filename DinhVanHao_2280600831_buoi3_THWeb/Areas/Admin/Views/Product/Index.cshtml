
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<DinhVanHao_2280600831_buoi3_THWeb.Models.Product>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">🛍️ Products</h2>
        <a asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm rounded-3">
            <thead class="table-dark text-light">
                <tr>
                    <th class="p-3">Name</th>
                    <th class="p-3 text-center">Price</th>
                    <th class="p-3">Description</th>
                    <th class="p-3 text-center">Ảnh sản phẩm</th>
                    <th class="p-3 text-center">Category</th>
                    <th class="p-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr class="align-middle">
                        <td class="p-3">@product.Name</td>
                        <td class="p-3 text-center">@product.Price.ToString("#,##0") VND</td>
                        <td class="p-3">@product.Description</td>
                        <td class="p-3 text-center">
                            <img src="@product.ImageUrl" alt="Ảnh sản phẩm" class="rounded shadow"
                                 style="width: 80px; height: 100px; object-fit: cover; border: 1px solid #ddd;" />
                        </td>
                        <td class="p-3 text-center">@product.Category?.Name</td>
                        <td class="p-3 text-center">
                            <a asp-action="Display" asp-route-id="@product.Id" class="btn btn-info btn-sm text-white">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <a asp-action="Update" asp-route-id="@product.Id" class="btn btn-warning btn-sm text-dark">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-danger btn-sm text-white"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
