
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model IEnumerable<DinhVanHao_2280600831_buoi3_THWeb.Models.Category>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary fw-bold">📂 Categories</h2>
        <a asp-action="Add" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Create New
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm rounded-3">
            <thead class="table-dark text-light">
                <tr>
                    <th class="p-3">Category Name</th>
                    <th class="p-3 text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr class="align-middle">
                        <td class="p-3">@category.Name</td>
                        <td class="p-3 text-center">
                            <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info btn-sm text-white">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning btn-sm text-dark">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger btn-sm text-white"
                               onclick="return confirm('Bạn có chắc chắn muốn xóa không?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
